@model IEnumerable<Personal>

@{
    ViewData["Title"] = "Personals";
}

<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Personals</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Personal
        </a>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>@Html.DisplayNameFor(model => model.Especialidade)</th>
                            <th>Alunos</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Especialidade)</td>
                                <td>
                                    @if (item.Alunos != null)
                                    {
                                        <span class="badge bg-primary">@item.Alunos.Count</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">0</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.PersonalID" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PersonalID" class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PersonalID" class="btn btn-sm btn-outline-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>Nenhum personal cadastrado. Clique no botão "Novo Personal" para adicionar.
            </div>
        }
    </div>
</div>