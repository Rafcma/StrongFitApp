@model Personal

@{
    ViewData["Title"] = "Detalhes do Personal";
}

<div class="card fade-in">
    <div class="card-header">
        <h2 class="mb-0">@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <div class="details-container">
            <dl class="row">
                <dt class="col-sm-3 details-label">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 details-label">@Html.DisplayNameFor(model => model.Especialidade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Especialidade)</dd>
            </dl>

            @if (Model.Alunos != null && Model.Alunos.Any())
            {
                <h4 class="mt-4">Alunos deste Personal</h4>
                <div class="table-responsive mt-3">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var aluno in Model.Alunos)
                            {
                                <tr>
                                    <td>@aluno.Nome</td>
                                    <td>@aluno.Email</td>
                                    <td>@aluno.Telefone</td>
                                    <td>
                                        <a asp-controller="Alunos" asp-action="Details" asp-route-id="@aluno.AlunoID" class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4">
                    <i class="fas fa-info-circle me-2"></i>Este personal ainda não possui alunos.
                </div>
            }
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.PersonalID" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>
</div>