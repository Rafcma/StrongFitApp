@model Treino

@{
    ViewData["Title"] = "Deletar Treino";
}

<h1>Deletar Treino</h1>

<h3>Tem certeza que deseja deletar este treino?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Aluno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>
        <dt class="col-sm-2">
            Personal
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Personal.Nome)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            Hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TreinoID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>