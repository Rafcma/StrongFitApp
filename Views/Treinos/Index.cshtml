@model IEnumerable<Treino>

@{
    ViewData["Title"] = "Treinos";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Treinos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Treino
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>@Html.DisplayNameFor(model => model.Aluno)</th>
                        <th>@Html.DisplayNameFor(model => model.Data)</th>
                        <th>@Html.DisplayNameFor(model => model.Hora)</th>
                        <th>Exercícios</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TreinoID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
                            <td>@item.Data.ToString("dd/MM/yyyy")</td>
                            <td>@item.Hora.ToString("HH:mm")</td>
                            <td>
                                @if (item.Exercicios != null)
                                {
                                    @item.Exercicios.Count
                                }
                                else
                                {
                                    <span>0</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.TreinoID" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.TreinoID" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TreinoID" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>