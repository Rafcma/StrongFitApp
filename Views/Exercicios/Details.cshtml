@model StrongFitApp.Models.Exercicio

@{
    ViewData["Title"] = "Detalhes do Exercício";
}

<div class="card fade-in">
    <div class="card-header">
        <h2 class="mb-0">@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <div class="details-container">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <span class="details-label">Nome:</span>
                        <h4>@Model.Nome</h4>
                    </div>
                    <div class="mb-3">
                        <span class="details-label">Categoria:</span>
                        <span class="badge bg-secondary">@Model.Categoria</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <span class="details-label">Séries:</span>
                        <p>@Model.Series</p>
                    </div>
                    <div class="mb-3">
                        <span class="details-label">Repetições:</span>
                        <p>@Model.Repeticoes</p>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <span class="details-label">Descrição:</span>
                <p>@Model.Descricao</p>
            </div>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.ExercicioID" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>
    </div>
</div>
