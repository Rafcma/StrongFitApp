@model IEnumerable<StrongFitApp.Models.Exercicio>
@using System.Linq

@{
    ViewData["Title"] = "Exercícios";
}

<div class="card fade-in">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Exercício
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Categoria</th>
                            <th>Séries</th>
                            <th>Repetições</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td><span class="badge bg-secondary">@item.Categoria</span></td>
                                <td>@item.Series</td>
                                <td>@item.Repeticoes</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.ExercicioID" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ExercicioID" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ExercicioID" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>Nenhum exercício cadastrado.
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Cadastrar Exercício
            </a>
        }
    </div>
</div>
