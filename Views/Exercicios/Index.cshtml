@model IEnumerable<Exercicio>

@{
    ViewData["Title"] = "Exercícios";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Exercícios</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Exercício
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                        <th>Aluno</th>
                        <th>Treino</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>
                                <span class="badge bg-secondary">@item.Categoria</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td>@Html.DisplayFor(modelItem => item.Treino.Aluno.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.TreinoID)</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.ExercicioID" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ExercicioID" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ExercicioID" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>