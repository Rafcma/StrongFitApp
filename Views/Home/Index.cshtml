@{
    ViewData["Title"] = "Home";
}

<div class="home-container fade-in">
    <div class="text-center mb-5">
        <h1 class="display-4">Bem-vindo ao StrongFitApp</h1>
        <p class="lead">Gerencie sua academia de forma eficiente! O StrongFitApp é um sistema completo para gerenciamento de treinos, alunos e personals.</p>
    </div>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="mb-0">Painel de Controle</h2>
            </div>
            <div class="card-body">
                @if (User.IsInRole("Admin") || User.IsInRole("Personal"))
                {
                    <div class="alert alert-primary mb-4">
                        <i class="fas fa-info-circle me-2"></i><strong>Navegação rápida:</strong> Utilize os botões abaixo para acessar as funcionalidades do sistema.
                    </div>

                    <div class="row">
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 treino-card">
                                <div class="card-body text-center">
                                    <div class="icon-circle mx-auto">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <h5>Alunos</h5>
                                    <p class="text-muted">Gerencie seus alunos</p>
                                    <a asp-controller="Alunos" asp-action="Index" class="btn btn-primary btn-sm">
                                        <i class="fas fa-arrow-right me-1"></i>Acessar
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 treino-card">
                                <div class="card-body text-center">
                                    <div class="icon-circle mx-auto">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <h5>Treinos</h5>
                                    <p class="text-muted">Gerencie os treinos</p>
                                    <a asp-controller="Treinos" asp-action="Index" class="btn btn-primary btn-sm">
                                        <i class="fas fa-arrow-right me-1"></i>Acessar
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 treino-card">
                                <div class="card-body text-center">
                                    <div class="icon-circle mx-auto">
                                        <i class="fas fa-running"></i>
                                    </div>
                                    <h5>Exercícios</h5>
                                    <p class="text-muted">Gerencie exercícios</p>
                                    <a asp-controller="Exercicios" asp-action="Index" class="btn btn-primary btn-sm">
                                        <i class="fas fa-arrow-right me-1"></i>Acessar
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 treino-card">
                                <div class="card-body text-center">
                                    <div class="icon-circle mx-auto">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                    <h5>Personals</h5>
                                    <p class="text-muted">Gerencie personals</p>
                                    <a asp-controller="Personals" asp-action="Index" class="btn btn-primary btn-sm">
                                        <i class="fas fa-arrow-right me-1"></i>Acessar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (User.IsInRole("Aluno"))
                {
                    <div class="alert alert-primary mb-4">
                        <i class="fas fa-info-circle me-2"></i><strong>Bem-vindo!</strong> Acesse seus treinos através do botão abaixo.
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card treino-card">
                                <div class="card-body text-center">
                                    <div class="icon-circle mx-auto">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <h5>Meus Treinos</h5>
                                    <p class="text-muted">Visualize seus treinos programados</p>
                                    <a asp-controller="Treinos" asp-action="MeusTreinos" class="btn btn-primary">
                                        <i class="fas fa-arrow-right me-1"></i>Ver Meus Treinos
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card mb-5">
            <div class="card-header">
                <h3 class="mb-0">Acesso ao Sistema</h3>
            </div>
            <div class="card-body text-center">
                <p class="mb-4">Faça login ou registre-se para começar a usar o sistema.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">
                        <i class="fas fa-user-plus me-2"></i>Registrar
                    </a>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100 treino-card">
                    <div class="card-body text-center">
                        <div class="icon-circle mx-auto">
                            <i class="fas fa-dumbbell"></i>
                        </div>
                        <h4>Treinos Personalizados</h4>
                        <p>Crie e gerencie treinos personalizados para cada aluno.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 treino-card">
                    <div class="card-body text-center">
                        <div class="icon-circle mx-auto">
                            <i class="fas fa-users"></i>
                        </div>
                        <h4>Gestão de Alunos</h4>
                        <p>Cadastre e acompanhe o progresso de seus alunos.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 treino-card">
                    <div class="card-body text-center">
                        <div class="icon-circle mx-auto">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h4>Acesso para Alunos</h4>
                        <p>Alunos podem consultar seus treinos diários facilmente.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
